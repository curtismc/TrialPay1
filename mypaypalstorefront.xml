f (prefs.getString("item_description") != "") { html += "<p>" + prefs.getString("item_description") + "</p>"; } // Set the currency character var currencyCode = prefs.getString("currency_code"); var currencyChar = ''; switch (currencyCode) { case "USD": case "AUD": case "CAD": case "HKD": case "NZD": case "SGD": case "TWD": currencyChar = '$'; break; case "GBP": currencyChar = '£'; break; case "EUR": currencyChar = '€'; break; } html += "<p>" + prefs.getMsg("item_price_label") + ": " + currencyChar + prefs.getString("amount") + " " + currencyCode + "<br />"; // Show Shipping if value is not empty if (prefs.getString("shipping") != "") { html += prefs.getMsg("item_shipping_label") + ": " + currencyChar + prefs.getString("shipping") + " " + currencyCode + "<br />"; } // Item Options drop-down menu	if (itemOptions.length > 0) { html += prefs.getString("on0") + ": "; html += "<select name='os0' style='width:auto;'>"; for (var i = 0; i < itemOptions.length; i++) { html += "<option value='" + itemOptions[i] + "'>" + itemOptions[i] + "</option>"; } html += "</select><br>"; } } // Set the button type; if cart, set the cart variable ('add' for Add to Cart / 'display' for View Cart); display the correct button if (btnType == "bn") { html += "<input type='hidden' name='cmd' value='_xclick' />"; html += "<p><input type='image' name='submit' alt='" + prefs.getMsg("buy_now_btn_alt") + "' src='" + prefs.getMsg("buy_now_btn_url") + "' width='" + prefs.getMsg("buy_now_btn_w") + "' height='" + prefs.getMsg("buy_now_btn_h") + "' border='0' /></p></div>"; } else if (btnType == "atc") { html += "<input type='hidden' name='cmd' value='_cart' /><input type='hidden' name='add' value='1' />"; html += "<p><input type='image' name='submit' alt='" + prefs.getMsg("add_to_cart_btn_alt") + "' src='" + prefs.getMsg("add_to_cart_btn_url") + "' width='" + prefs.getMsg("add_to_cart_btn_w") + "' height='" + prefs.getMsg("add_to_cart_btn_h") + "' border='0' /></p></div>"; } else if (btnType == "vc") { html += "<input type='hidden' name='cmd' value='_cart' /><input type='hidden' name='display' value='1' />"; html += "<p><input type='image' name='submit' alt='" + prefs.getMsg("view_cart_btn_alt") + "' src='" + prefs.getMsg("view_cart_btn_url") + "' width='" + prefs.getMsg("view_cart_btn_w") + "' height='" + prefs.getMsg("view_cart_btn_h") + "' border='0' /></div>"; } // Stuff HTML into form document.getElementById("PPG_Form").innerHTML = html; // Resize after content & images have loaded gadgets.util.registerOnLoadHandler(dynSize); </script>
